# PATH
export PATH=$HOME/bin:/usr/local/bin:$HOME/.local/bin:$HOME/scripts:$HOME/.nimble/bin:$PATH

# Package Manager
. ~/.znap.zshrc

# history
HISTFILE=$HOME/.zsh-history # file to save history
HISTSIZE=100000             # history size in-memory
SAVEHIST=1000000            # history size in the file
# share .zshhistory
setopt inc_append_history   # save the command to history when running
setopt share_history        # share history with other session 

# automatically change directory when dir name is typed
setopt auto_cd

# disable ctrl+s, ctrl+q
setopt no_flow_control

# Imports
. ~/.ls.zshrc

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

znap prompt sindresorhus/pure

alias v="nvim"
alias pshl="source ./.venv/bin/activate"
alias pylspinst="pip install \"python-lsp-server[all]\" pyls-isort pylsp-mypy python-lsp-black"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
