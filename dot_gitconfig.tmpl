[pull]
	rebase = false
[user]
	email = "code.karim@gmail.com"
	name = Karim Khaleel
[core]
  pager = delta
  editor = nvim
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  features = villsau
[include]
  path = ~/.config/delta/themes.gitconfig
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[init]
  defaultBranch = main
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
